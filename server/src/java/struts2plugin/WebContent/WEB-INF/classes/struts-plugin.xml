<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="nitobi-default" extends="struts-default">
        <result-types>
            <result-type name="nitobi" 
            			class="com.nitobi.struts2.plugin.NitobiResult"
            			default="false"/>
        </result-types>
        
        <interceptors>
        	<interceptor name="nitobi" 
        				class="com.nitobi.struts2.plugin.NitobiInterceptor"></interceptor>
        </interceptors>
    </package>
</struts>